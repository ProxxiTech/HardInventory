{
  "name": "HardInventory",
  "productName": "Hard Inventory",
  "description": "Inventory management for hardware startups",
  "version": "1.0.0",
  "private": true,
  "author": "Richard Sim <github@devras.com>",
  "copyright": "Â© 2018, Proxxi Technology Corporation",
  "homepage": "http://proxxi.tech",
  "main": "app/background.js",
  "build": {
    "appId": "tech.proxxi.hard-inventory",
    "files": [
      "app/**/*",
      "node_modules/**/*",
      "app.html",
      "print_barcode.html",
      "package.json"
    ],
    "directories": {
      "buildResources": "resources"
    },
    "publish": null
  },
  "scripts": {
    "postinstall": "electron-builder install-app-deps",
    "preunit": "webpack --config=build/webpack.unit.config.js --env=test --display=none",
    "unit": "electron-mocha temp/specs.js --renderer --require source-map-support/register",
    "pree2e": "webpack --config=build/webpack.app.config.js --env=test --display=none && webpack --config=build/webpack.e2e.config.js --env=test --display=none",
    "e2e": "mocha temp/e2e.js --require source-map-support/register",
    "test": "npm run unit && npm run e2e",
    "start": "node build/start.js",
    "build": "webpack --display-modules --output-pathinfo --debug --display-error-details --config=build/webpack.app.config.js --env=development",
    "debug": "webpack --display-modules --output-pathinfo --debug --display-error-details --config=build/webpack.app.config.js --env=development && electron-builder",
    "release": "npm test && webpack --config=build/webpack.app.config.js --env=production && electron-builder"
  },
  "dependencies": {
    "ag-grid": "^16.0.1",
    "async": "^2.6.0",
    "bwip-js": "^1.6.2",
    "fs-jetpack": "^1.0.0",
    "google-spreadsheet": "^2.0.4",
    "jimp": "^0.2.28",
    "octopartjs": "^1.0.5",
    "printer": "^0.2.2",
    "typeface-noto-sans": "0.0.54",
    "typeface-roboto": "0.0.54",
    "typeface-roboto-mono": "0.0.54",
    "xel": "0.0.115"
  },
  "devDependencies": {
    "@babel/core": "^7.0.0-beta.38",
    "@babel/plugin-proposal-object-rest-spread": "^7.0.0-beta.38",
    "@babel/preset-env": "^7.0.0-beta.38",
    "babel-loader": "^8.0.0-beta.0",
    "chai": "^4.1.0",
    "css-loader": "^0.28.7",
    "electron": "1.7.11",
    "electron-builder": "^19.55.3",
    "electron-mocha": "^5.0.0",
    "eslint": "^4.16.0",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-plugin-import": "^2.8.0",
    "file-loader": "^1.1.6",
    "friendly-errors-webpack-plugin": "^1.6.1",
    "mocha": "^4.0.1",
    "source-map-support": "^0.5.0",
    "spectron": "^3.8.0",
    "style-loader": "^0.19.0",
    "url-loader": "^0.6.2",
    "webpack": "^3.8.1",
    "webpack-merge": "^4.1.0",
    "webpack-node-externals": "^1.6.0"
  }
}
